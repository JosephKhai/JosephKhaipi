@model JosephKhaipi.Web.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Joseph Khai - The Dev Blog
            </h1>
            <p class="lead">
                Joseph is the gome to coding blogs covering a vast range of topics like HTML,
                CSS, JAVA, ASP.NET, C#, Angular etc. Want to read the latest dev articles? Join the team and get weekly blogs in your mail.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://media.istockphoto.com/id/1182641010/photo/i-love-working-from-home.jpg?s=2048x2048&w=is&k=20&c=jd7vgp1kANNPXRuGdPt9FTcfnWkxlZV27tPX-YbiCiE="
                 alt="Joseph - Dev Blogs"
                 class="d-block mx-lg-auto img-fluid"
                 width="300"
        </div>
    </div>

</div>

<div class="container">
    <div class="row justify-content-between">
        <div class="col-6 d-flex">
            @if(Model != null && Model.Tags.Any())
            {
                foreach(var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">
                        @tag.Name
                    </span>
                }
            }
        </div>
    </div>
</div>


<div class="container">
    <div class="row justify--content-center">
        <div class="col-6">
            @if (Model != null && Model.BlogPosts.Any())
            {
                foreach (var blogPost in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeaturedImageUrl"
                             alt="@blogPost.Heading" class="mb-2 d-block img-fluid" />

                        <h2 class="mb-4">@blogPost.Heading</h2>

                        <p class="mb-4">
                            @blogPost.Author
                            <br />
                            Published Date: @blogPost.PublishedDate
                        </p>

                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>

                        <p class="mb-4">
                            @blogPost.ShortDescription
                        </p>

                        <a class="btn btn-dark"
                           asp-area=""
                           asp-controller="Blogs"
                           asp-action="Index"
                           asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>

                    </div>
                }
            }
        </div>
    </div>

</div>






